```{r}
library(ggplot2)
ggplot(subsetDataTWbank)+
  geom_point(
    aes(x=西元年月,y=`定存利率-一個月-固定`)
  ) +
  geom_line(
    aes(x=西元年月,y=`定存利率-一個月-固定`)
  ) 

subsetDataTWbank %>%
  gather(
    `定存利率-一個月-固定`,`定存利率-二年期-固定`,`定存利率-三年期-固定`,
    key = "期數", value = "利率"
  ) %>%
  ggplot() +
  geom_line(
    aes(x=西元年月,y=利率)
  )
